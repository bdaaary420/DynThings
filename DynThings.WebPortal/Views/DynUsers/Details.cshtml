@model DynThings.Data.Models.AspNetUser

@{
    ViewBag.Title = "User Details";
}

<!--Page Title-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div id="page-title">
    <div class="row">
        <div class="col-lg-9">
            <h1 class="page-header text-overflow">User: @Model.FullName</h1>
            <h5></h5>
        </div>

        <div class="col-lg-3">
            <div class="pull-right">
                <br />
                <a href="~/dynusers"> < Back to Users List</a>
            </div>
        </div>
    </div>
</div>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--End page title-->

<div id="page-content">
    <div class="fixed-fluid">
        <div class="fixed-sm-200 fixed-lg-250 pull-sm-left">
            <div class="">
                <div class="text-center bg-info">
                    <img src="~/Imgs/Apps/0.jpg" style="height:100%;width:100%" />
                    <ul class="list-unstyled text-center pad-top mar-no row">
                        <li class="col-xs-12">
                            <span class="text-lg ">@Model.FullName</span>
                            <br /><br />
                        </li>
                        @*<li class="col-xs-4">
                                <span class="text-lg text-semibold">23K</span>
                                <p class="text-sm mar-no">Followers</p>
                            </li>
                            <li class="col-xs-4">
                                <span class="text-lg text-semibold">278</span>
                                <p class="text-sm mar-no">Post</p>
                            </li>*@
                    </ul>
                </div>
                <div class="list-group bg-trans pad-btm">
                    <a class="list-group-item" onclick="LoadPart_DynUserMainDiv();" style="cursor: pointer;">Main</a>
                    <a class="list-group-item" onclick="LoadPart_DynUserRolesDiv();" style="cursor: pointer;">Roles</a>
                    <a class="list-group-item" onclick="LoadPart_DialogDynUserDelete();" data-toggle="modal" data-target="#mdl" style="cursor: pointer;">Delete</a>
                </div>
            </div>
        </div>

        <div class="fluid">
            <div class="fixed-fluid">
                <div id="divPageDetails">

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Assets/Scripts/DynScripts/DynUsers.js"></script>
    <script>
        $(document).ready(function () {
            selectedDynUserID = '@Model.Id';
            LoadPart_DynUserMainDiv('@Model.Id');
            @*LoadPart_DynUserRolesDiv('@Model.Id');*@
        });
    </script>
}


