@model IPagedList<DynThings.Data.Models.ViewModels.ThingExtenstionProperty>
<table class="table striped hovered table-bordered" id="main_table_demo">
    <thead>
        <tr>
            <th>Property</th>
            <th>Value</th>
            <th>Data Type</th>
            <th>List Support</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <Text>
            <tr>
                <td>@p.ThingExtenstion.Title</td>
                <td>@p.Value</td>
                <td>@p.DataType.Title</td>
                <td>@p.ThingExtenstion.IsList.ToString()</td>
                <td>
                    @if (p.ThingExtenstion.IsList == false)
                    {
                        if (p.Value != "")
                        {
                            <button class="btn btn-warning" onclick="LoadPart_DialogThingPropertyEdit(@p.ValueID);" data-toggle="modal" data-target="#mdl">Set</button>
                            <button class="btn btn-danger" onclick="LoadPart_DialogThingPropertyDelete(@p.ValueID);" data-toggle="modal" data-target="#mdl">Clear</button>
                        }
                        else
                        {
                            <button class="btn btn-warning" onclick="LoadPart_DialogThingPropertyAdd(@p.ThingExtenstion.ID);" data-toggle="modal" data-target="#mdl">Set</button>
                        }
                    }
                    else
                    {
                        if (p.Value != "")
                        {
                            <button class="btn btn-warning" onclick="LoadPart_DialogThingPropertyEdit(@p.ValueID);" data-toggle="modal" data-target="#mdl">Set</button>
                            <button class="btn btn-danger" onclick="LoadPart_DialogThingPropertyDelete(@p.ValueID);" data-toggle="modal" data-target="#mdl">Delete</button>
                            <button class="btn btn-purple" onclick="LoadPart_DialogThingPropertyAdd(@p.ThingExtenstion.ID);" data-toggle="modal" data-target="#mdl">Add</button>
                        }
                        else
                        {
                            <button class="btn btn-warning" onclick="LoadPart_DialogThingPropertyAdd(@p.ThingExtenstion.ID);" data-toggle="modal" data-target="#mdl">Set</button>
                        }
                    }
                </td>
            </tr>
            </text>
        }
    </tbody>
</table>


@if (Model.PageCount > 1)
{
    <div id="ThingExtenstionPropertysListPager">
        <input id="ThingExtenstionPropertysCurrentPage" value="@Model.PageNumber.ToString()" hidden />
        @Html.PagedListPager(Model, page => Url.Action("GetPVPropertiesList", new { page }))
    </div>
}




