@model IEnumerable<DynThings.Data.Models.Thing>
@{
    ViewBag.Title = "Things";
}

<!--Page Title-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div id="page-title">
    <div class="row">
        <div class="col-lg-9">
            <h1 class="page-header text-overflow">Things</h1>
            <h5></h5>
        </div>

        <div class="col-lg-3">
            <div class="pull-right">
                @*<br />
                    <a href="~/Endpoints"> < Back to Endpoints List</a>*@
            </div>
        </div>
    </div>
</div>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--End page title-->

<div id="page-content">
    <div class="row">
        <div class="col-xs-3 col-sm-2 col-md-6">
            <button type="button" class="btn btn-purple" onclick="LoadPart_DialogThingAdd()" data-toggle="modal" data-target="#mdl">Add</button>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <input type="search" id="txtThingSearch" class="form-control" onkeydown="if (event.keyCode == 13) { LoadPart_ThingListDiv(); return false; }" />
                <div class="input-group-btn">
                    <button type="button" class="btn btn-primary" onclick="LoadPart_ThingListDiv()">Search</button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div id="divThingsList">
    </div>
</div>

@section scriptfiles{
    <script src="~/Assets/Scripts/DynScripts/Things.js"></script>
}
@section scripts{
    <script>
        $(document).ready(function () {
            LoadPart_ThingListDiv();
            AttachEventThingsListPager();
        });

    </script>
}