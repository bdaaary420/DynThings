@model DynThings.Data.Models.Alert
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Alert Schedule Editor</h4>
</div>
<div class="modal-body">
    @using (Html.BeginForm("EditSchedulePV", "Alerts", FormMethod.Post, new { id = "AlertEditScheduleForm" })) 
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <h3>Active Days</h3><br />
        <span>Sunday</span>
        @Html.EditorFor(model => model.Sunday, new { htmlAttributes = new { @class = "" } })
        @Html.ValidationMessageFor(model => model.Sunday, "", new { @class = "text-danger" })
        <br />

        <span>Monday</span>
        @Html.EditorFor(model => model.Monday, new { htmlAttributes = new { @class = "" } })
        @Html.ValidationMessageFor(model => model.Monday, "", new { @class = "text-danger" })
        <br />

        <span>Tuesday</span>
        @Html.EditorFor(model => model.Tuesday, new { htmlAttributes = new { @class = "" } })
        @Html.ValidationMessageFor(model => model.Tuesday, "", new { @class = "text-danger" })
        <br />

        <span>Wednesday</span>
        @Html.EditorFor(model => model.Wednesday, new { htmlAttributes = new { @class = "" } })
        @Html.ValidationMessageFor(model => model.Wednesday, "", new { @class = "text-danger" })
        <br />

        <span>Thursday</span>
        @Html.EditorFor(model => model.Thursday, new { htmlAttributes = new { @class = "" } })
        @Html.ValidationMessageFor(model => model.Wednesday, "", new { @class = "text-danger" })
        <br />

        <span>Friday</span>
        @Html.EditorFor(model => model.Friday, new { htmlAttributes = new { @class = "" } })
        @Html.ValidationMessageFor(model => model.Friday, "", new { @class = "text-danger" })
        <br />

        <span>Saturday</span>
        @Html.EditorFor(model => model.Saturday, new { htmlAttributes = new { @class = "" } })
        @Html.ValidationMessageFor(model => model.Saturday, "", new { @class = "text-danger" })
        <br />


        <h3>Active Hours</h3><br />
        <span>Start Time</span>
        @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
        <br />

        <span>End Time</span>
        @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
        <br />
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary" onclick="SubmitAlertEditScheduleForm(@Model.ID);">Save changes</button>
</div>
