@model IEnumerable<DynThings.Data.Models.Alert>
@{
    ViewBag.Title = "Alerts";
}
<div class="container">
    <div class="page-header">
        <h1>Alerts</h1>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="button" class="btn btn-info" onclick="LoadPart_DialogAlertAdd()" data-toggle="modal" data-target="#mdl">Add</button>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <input type="search" id="txtAlertSearch" class="form-control" onkeydown="if (event.keyCode == 13) { LoadPart_AlertListDiv(); return false; }" />
                <div class="input-group-btn">
                    <button type="button" class="btn btn-primary" onclick="LoadPart_AlertListDiv()">Search</button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="well well-lg">
        <div id="divAlertsList">
        </div>
    </div>
</div>
@section scriptfiles{
    <script src="~/Assets/Scripts/DynScripts/Alerts.js"></script>
}
@section scripts{
    <script>
        $(document).ready(function () {
            LoadPart_AlertListDiv();
            AttachEventAlertsListPager();
        });


    </script>
}