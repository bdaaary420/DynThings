@model DynThings.Data.Models.Endpoint
@{
    ViewBag.Title = "EndPoint Details";
}

<!--Page Title-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div id="page-title">
    <div class="row">
        <div class="col-lg-9">
            <h1 class="page-header text-overflow">Endpoints</h1>
            <h5>Manage the endpooints, and assign Things to them.</h5>
        </div>

        <div class="col-lg-3">
            <div class="pull-right">
                <br />
                    <a href="~/Endpoints"> < Back to Endpoints List</a>
            </div>
        </div>
    </div>
</div>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--End page title-->


<div id="page-content">
    <div class="fixed-fluid">
        <div class="fixed-sm-200 fixed-lg-250 pull-sm-left">
            <div class="">
                <div class="text-center bg-info">
                    <img src="~/Imgs/Apps/0.jpg" style="height:100%;width:100%" />
                    <ul class="list-unstyled text-center pad-top mar-no row">
                        <li class="col-xs-12">
                            <span class="text-lg ">@Model.Title</span>
                            <br /><br />

                        </li>
                        @*<li class="col-xs-4">
                                <span class="text-lg text-semibold">23K</span>
                                <p class="text-sm mar-no">Followers</p>
                            </li>
                            <li class="col-xs-4">
                                <span class="text-lg text-semibold">278</span>
                                <p class="text-sm mar-no">Post</p>
                            </li>*@
                    </ul>
                </div>
                <div class="list-group bg-trans pad-btm">
                    <a class="list-group-item" onclick="LoadPart_EndpointMainDiv();" style="cursor: pointer;">Main</a>
                    <a class="list-group-item" onclick="LoadPart_EndpointHistoryDiv();" style="cursor: pointer;">History</a>
                    <a class="list-group-item" onclick="LoadPart_EndpointCommandsDiv('');" style="cursor: pointer;">Commands</a>
                    <a class="list-group-item" onclick="LoadChart_EndPoint_ConnectivityDiv();" style="cursor: pointer;">Connectivity</a>
                    <a class="list-group-item" onclick="LoadPart_EndpointDeveloperDiv();" style="cursor: pointer;">Developer Area</a>
                    <a class="list-group-item" onclick="LoadPart_EndpointDelete();" data-toggle="modal" data-target="#mdl" style="cursor: pointer;">Delete</a>
                </div>
            </div>
        </div>

        <div class="fluid">
            <div class="fixed-fluid">
                <div id="divPageDetails">

                </div>
            </div>
        </div>
    </div>

</div>

<div class="container">
    <div class="page-header">
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="input-group">
                <select id="drpEndpointHighchartsView" class="form-control" onchange="drpReport_Select(@Model.ID,'@DateTime.Now.Year.ToString()')">
                    <option value="1">Inputs: Minutes\Hour</option>
                    <option value="2">Inputs: Hour\Day</option>
                    <option value="3">Inputs: Day\Month</option>
                    <option value="4">Inputs: Month\Year</option>
                    <option value="5">Network: Connection drops\Months  (Count)</option>
                </select>
                <div class="input-group-btn">
                    <button onclick="drpReport_Select(@Model.ID,'@DateTime.Now.Year.ToString()')" class="btn btn-primary">Refresh</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div id="EndPointChartDiv"></div>
        </div>
    </div>
    <div class="row">
       
        <div class="col-md-6">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tabEndPointmain">Main</a></li>
                <li><a data-toggle="tab" href="#tabEndPointhistory">History</a></li>
                <li><a data-toggle="tab" href="#tabEndPointcommands">Commands</a></li>
                <li><a data-toggle="tab" href="#tabEndPointDevkeys">Dev Keys</a></li>
                <li><a data-toggle="tab" href="#tabEndPointDelete">Delete</a></li>
            </ul>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="tab-content">
                        <div id="tabEndPointmain" class="tab-pane fade in active">
                            <div id="divEndPointMain">
                            </div>
                        </div>
                        <div id="tabEndPointhistory" class="tab-pane fade">
                            <div class="right">
                                <button type="button" class="btn btn-info pull-right" onclick="LoadPart_EndPointHistoryDiv('@Model.ID')">Refresh</button>
                            </div>
                            <div id="divEndPointHistory">
                            </div>
                        </div>
                        <div id="tabEndPointcommands" class="tab-pane fade">
                            <div class="right">
                                <button type="button" class="btn btn-info pull-right" onclick="LoadPart_EndPointCommandListByEndPointIDDiv('@Model.ID','')">Refresh</button>
                            </div>
                            <div id="divEndPointCommandsList">
                            </div>
                        </div>
                        <div id="tabEndPointDevkeys" class="tab-pane fade">
                            <div id="divEndPointDevkeys">
                                @*@Html.Partial("_Details_Keys", Model)*@
                            </div>
                        </div>
                        <div id="tabEndPointDelete" class="tab-pane fade">
                            <div id="divEndPointDelete">
                                <button type="button" class="btn btn-danger" onclick="LoadPart_DialogEndPointDelete(@Model.ID)" data-toggle="modal" data-target="#mdl">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

